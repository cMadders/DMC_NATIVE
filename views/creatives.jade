extends layout

block content
  .row.wrapper.border-bottom.white-bg.page-heading
    .col-lg-9
      h2 #{title} (#{creatives.length})
      ol.breadcrumb
        li
          a(href="/dashboard") Home
        li.active
          a(href="/dashboard/creatives") #{title}


  .wrapper.wrapper-content.animated.fadeInRight
    if creatives.length
      table.table.table-striped.table-bordered.creative-table.table-hover(style='background:white;')
        thead
          th ID
          th ListingID
          th DMC Ad #
          th Advertiser
          //- th Headline
          th Creation Date
          th Last Modified
          //- th Tagline
        tbody
        each creative in creatives
          if creative
            tr(data-creativeid="#{creative._id}")
              //- td.bg-image.dmc(style="background-image:url('#{creative.media.logo}');")
              td #{creative._id}
              td #{creative.extra.listingID}
              td #{creative.extra.dmcAdNumber}
              td #{creative.advertiser}
              //- td #{creative.headline}
              td #{creative.creation_date}
              td #{creative.last_modified}
              //- td #{creative.tagline}

  script.
    $('.creative-table tbody tr').click(function(e){
      e.preventDefault();
      var creativeID = $(this).data('creativeid');
      window.open("/api/creative/" + creativeID);
    })
