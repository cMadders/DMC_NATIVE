doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width initial-scale=1.0 maximum-scale=1.0')
    link(href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700")
    link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.3/animate.min.css" rel="stylesheet")
    link(href='/css/demo.css', rel='stylesheet')
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript")
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')

    style.
      nav a{
        color: blue;
        margin-bottom: 19px;
        display: block;
        cursor:pointer;
      }
      .modal-dialog{
        width: 85% !important;
      }

  body
    header
      //- .animated.fadeIn
      img(src="http://native.digitalmediacommunications.com/images/dmc_logo.png")

    .modal.fade(tabindex='-1', role='dialog')#myModal
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4.modal-title Desktop Demo
          .modal-body
            iframe.desktop(style="width:100%;height:80vh;border:none;outline:none;")

    nav
      //- .animated.slideInLeft
      h2(style="color:#222;") Omaha
      h4(style="color:#222;") Mobile
      a(data-src="http://goo.gl/BMogzR") Recruitment - Multi Company
      a(data-src="http://goo.gl/qc04XH") Recruitment - One Company w/ Multi Jobs
      a(data-src="http://goo.gl/jf58QG") Restaurant - Multi Company
      a(data-src="http://goo.gl/Z84FN7") Service - Multi Category
      a(data-src="http://goo.gl/mbKWCz") Service - Dentists

      #qr
        //- h4(style="color:#222;") View on Device
        img(src="http://goo.gl/mbKWCz.qr")

      //- hr(style="margin-top:20px;")

      //- h4(style="color:#222;") Desktop
      //- a(data-src="http://goo.gl/WGlz69" data-desktop="true" data-toggle='modal', data-target='#myModal') Recruitment - Multi Company

    #viewport
      //- .animated.fadeInUp
      #iphone
        //- iframe.content(src='#{domain}/demo/card/#{publication}')
        iframe.content(src='http://goo.gl/BMogzR')


    script.
      $('nav a').click(function(evt){
        evt.preventDefault();
        if($(this).data('desktop')){
        $('iframe.desktop').attr('src',$(this).data('src'));
        return;
        }
        $('iframe.content').attr('src', $(this).data('src'));
        $('#qr img').attr('src',$(this).data('src') + '.qr');
      })

    if env === "development"
      script(src="//localhost:35729/livereload.js")